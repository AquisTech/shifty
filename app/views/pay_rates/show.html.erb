<%- model_class = PayRate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:worker_id) %>:</strong></dt>
  <dd><%= @pay_rate.worker_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:effective) %>:</strong></dt>
  <dd><%= @pay_rate.effective %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hourly_pay_in_cents) %>:</strong></dt>
  <dd><%= @pay_rate.hourly_pay_in_cents %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hourly_capital_contribution_in_cents) %>:</strong></dt>
  <dd><%= @pay_rate.hourly_capital_contribution_in_cents %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hourly_predicted_extra_wage_in_cents) %>:</strong></dt>
  <dd><%= @pay_rate.hourly_predicted_extra_wage_in_cents %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @pay_rate.notes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pay_rates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pay_rate_path(@pay_rate), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pay_rate_path(@pay_rate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
