<table class="table" id="shiftsummary">
  <tr><th>Worker</th><th>Hours worked</th><th>Hourly pay</th><th>Capital Contributions</th><th>Predicted extra wage</th></tr>
<% shifts_to_summary(shifts).each do |k,v|  %>
<tr>
  <td><%= link_to v[:worker].name,v[:worker] %></td>
  <td><%= v[:hours] %></td>
  <td><%= v[:total_hourly_pay] %></td>
  <td><%= v[:total_hourly_capital_contribution] %></td>
  <td><%= v[:total_hourly_predicted_extra_wage] %></td>
</tr>
<% end %>
</table>
