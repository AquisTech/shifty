<p id="notice"><%= notice %></p>

<h1>Listing Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Worker</th>
      <th>Day of week</th>
      <th>Monday</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Task</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.worker %></td>
        <td><%= shift.day_of_week %></td>
        <td><%= shift.monday %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.end_time %></td>
        <td><%= shift.task %></td>
        <td><%= shift.notes %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

